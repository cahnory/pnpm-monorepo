{
  "name": "pnpm-monorepo",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "config": {
    "defaultBranch": "main"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm build",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test && pnpm test:commit && pnpm test:rebase",
    "test:lint": "turbo run test:lint",
    "test:types": "turbo run test:types",
    "test:unit": "turbo run test:unit",
    "test:commit": "scripts/test-commit.sh $npm_package_config_defaultBranch",
    "test:rebase": "scripts/test-rebase.sh $npm_package_config_defaultBranch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-exports": "1.0.0-beta.5",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-perfectionist": "^2.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "only-allow": "^1.2.0",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14"
  }
}
