{
  "name": "pnpm-monorepo",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "defaultBranch": "main"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "pnpm build",
    "build": "turbo run build",
    "commit": "cz",
    "dev": "turbo run dev",
    "test": "turbo run test --continue --output-logs=errors-only ; pnpm test:commit ; pnpm test:rebase",
    "test:lint": "turbo run test:lint --continue --output-logs=errors-only",
    "test:types": "turbo run test:types --continue --output-logs=errors-only",
    "test:unit": "turbo run test:unit --continue --output-logs=errors-only",
    "test:commit": "scripts/test-commit.sh $npm_package_config_defaultBranch",
    "test:rebase": "scripts/test-rebase.sh $npm_package_config_defaultBranch"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@commitlint/cz-commitlint": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-perfectionist": "^2.2.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "only-allow": "^1.2.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.16"
  }
}
