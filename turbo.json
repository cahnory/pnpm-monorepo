{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:lint": {},
    "test:types": {},
    "test:unit": {}
  },
  "globalDependencies": [
    ".eslintrc",
    ".prettierrc",
    "tsconfig.base.json",
    "tsconfig.react.json",

    "@(apps|libs)/tsconfig.json",
    "@(apps|libs)/.eslintignore"
  ]
}
