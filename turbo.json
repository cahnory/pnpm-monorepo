{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:format": {},
    "lint:semantic": {
      "dependsOn": ["^build"]
    },
    "lint:types": {
      "dependsOn": ["^build"]
    },
    "lint:usage": {},
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "lint:fix:format": {},
    "lint:fix:semantic": {
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    }
  },
  "globalDependencies": [
    ".eslintrc",
    ".prettierrc",
    "tsconfig.base.json",
    "tsconfig.react.json"
  ]
}
