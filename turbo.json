{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:format": {},
    "lint:semantic": {},
    "lint:types": {},
    "lint:fix": {},
    "lint:fix:format": {},
    "lint:fix:semantic": {},
    "test": {},
    "test:unit": {}
  },
  "globalDependencies": [
    ".eslintrc",
    ".prettierrc",
    "tsconfig.base.json",
    "tsconfig.react.json",

    "apps/*/tsconfig.json",
    "libs/*/tsconfig.json",
    "apps/*/.eslintignore.json",
    "libs/*/.eslintignore.json"
  ]
}
