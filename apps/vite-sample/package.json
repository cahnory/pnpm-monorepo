{
  "$schema": "https://json.schemastore.org/package",
  "name": "@pnpm-monorepo/vite-sample-app",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "lint": "concurrently -r -g pnpm:lint:types pnpm:lint:semantic pnpm:lint:format",
    "lint:format": "prettier -c ./",
    "lint:semantic": "eslint ./",
    "lint:types": "tsc --noEmit",
    "lint:fix": "concurrently -r -g pnpm:lint:fix:format pnpm:lint:fix:semantic",
    "lint:fix:format": "prettier --write --list-different ./",
    "lint:fix:semantic": "eslint ./ --fix",
    "test": "pnpm test:unit",
    "test:unit": "c8 --all --include src vite-node japa.unit.ts"
  },
  "dependencies": {
    "@pnpm-monorepo/react-sample-lib": "workspace:*",
    "@vanilla-extract/css": "^1.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@japa/expect": "3.0.0-1",
    "@japa/runner": "3.0.0-9",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vanilla-extract/vite-plugin": "^3.9.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "c8": "^8.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vite": "^4.4.5",
    "vite-node": "^0.34.6"
  }
}
