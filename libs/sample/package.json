{
  "$schema": "https://json.schemastore.org/package",
  "name": "@pnpm-monorepo/sample-lib",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./*": {
      "import": "./build/*.js",
      "types": "./build/*.d.ts"
    }
  },
  "scripts": {
    "build": "rimraf ./build && tsc --build --force tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "concurrently -r -g pnpm:lint:types pnpm:lint:semantic pnpm:lint:format",
    "lint:format": "prettier -c ./",
    "lint:semantic": "eslint ./",
    "lint:types": "tsc --noEmit",
    "lint:fix": "concurrently -r -g pnpm:lint:fix:format pnpm:lint:fix:semantic",
    "lint:fix:format": "prettier --write --list-different ./",
    "lint:fix:semantic": "eslint ./ --fix",
    "test": "pnpm test:unit",
    "test:unit": "c8 --all --include src tsx japa.unit.ts"
  },
  "devDependencies": {
    "@japa/expect": "3.0.0",
    "@japa/runner": "3.0.5",
    "c8": "^8.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
